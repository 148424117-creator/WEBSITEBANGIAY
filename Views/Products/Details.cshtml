@model ShoeStore.Models.Product
@{
    ViewData["Title"] = Model.Name;
}

<div class="container py-4">
    <div class="row">
        <div class="col-md-6">
            <img src="https://images.pexels.com/photos/2529148/pexels-photo-2529148.jpeg" 
                 class="img-fluid rounded" alt="@Model.Name">
        </div>
        <div class="col-md-6">
            <h1 class="fw-bold">@Model.Name</h1>
            <p class="text-muted">@Model.Brand</p>
            
            <div class="mb-3">
                @if (Model.SalePrice.HasValue)
                {
                    <span class="h4 text-danger fw-bold">@Model.SalePrice.Value.ToString("C0")</span>
                    <span class="text-muted text-decoration-line-through ms-2">@Model.Price.ToString("C0")</span>
                }
                else
                {
                    <span class="h4 fw-bold">@Model.Price.ToString("C0")</span>
                }
            </div>
            
            <p>@Model.Description</p>
            
            <form method="post" action="@Url.Action("AddToCart", "Products")">
                <input type="hidden" name="productId" value="@Model.Id" />
                
                <div class="mb-3">
                    <label class="form-label">Size:</label>
                    <select name="size" class="form-select">
                        <option value="39">39</option>
                        <option value="40">40</option>
                        <option value="41">41</option>
                        <option value="42" selected>42</option>
                        <option value="43">43</option>
                        <option value="44">44</option>
                    </select>
                </div>
                
                <div class="mb-3">
                    <label class="form-label">Màu sắc:</label>
                    <select name="color" class="form-select">
                        <option value="Đen" selected>Đen</option>
                        <option value="Trắng">Trắng</option>
                        <option value="Xanh">Xanh</option>
                        <option value="Đỏ">Đỏ</option>
                    </select>
                </div>
                
                <div class="mb-3">
                    <label class="form-label">Số lượng:</label>
                    <input type="number" name="quantity" value="1" min="1" max="10" class="form-control" style="width: 100px;">
                </div>
                
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="fas fa-shopping-cart me-2"></i>Thêm vào giỏ hàng
                </button>
            </form>
        </div>
    </div>
</div>