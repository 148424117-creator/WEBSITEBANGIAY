@model ShoeStore.Models.Order
@{
    ViewData["Title"] = "Đặt hàng thành công";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="text-center mb-4">
                <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                <h2 class="fw-bold text-success mt-3">Đặt hàng thành công!</h2>
                <p class="text-muted">Cảm ơn bạn đã mua hàng. Chúng tôi sẽ liên hệ với bạn sớm nhất.</p>
            </div>
            
            <div class="card">
                <div class="card-header">
                    <h5>Thông tin đơn hàng #@Model.OrderNumber</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Khách hàng:</strong> @Model.CustomerName</p>
                            <p><strong>Email:</strong> @Model.CustomerEmail</p>
                            <p><strong>Điện thoại:</strong> @Model.CustomerPhone</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Tổng tiền:</strong> @Model.TotalAmount.ToString("C0")</p>
                            <p><strong>Trạng thái:</strong> <span class="badge bg-warning">@Model.Status</span></p>
                            <p><strong>Ngày đặt:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                    </div>
                    
                    <h6 class="mt-4">Sản phẩm đã đặt:</h6>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th>Số lượng</th>
                                    <th>Đơn giá</th>
                                    <th>Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderItems)
                                {
                                    <tr>
                                        <td>@item.Product.Name</td>
                                        <td>@item.Quantity</td>
                                        <td>@item.UnitPrice.ToString("C0")</td>
                                        <td>@item.TotalPrice.ToString("C0")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            
            <div class="text-center mt-4">
                <a href="/" class="btn btn-primary">Tiếp tục mua sắm</a>
            </div>
        </div>
    </div>
</div>